@{
    Layout = null;
    ViewData["Title"] = "Forgot Password Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Confirmation - Admin Dashboard</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body class="bg-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Check Your Email</h3></div>
                    <div class="card-body">
                        <p class="text-center">
                            If an account with that email address exists, we have sent instructions to reset your password.
                        </p>
                        <div class="text-center mt-4">
                            <a asp-action="Login">Return to login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>